<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/temperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Temperature"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/activateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:text="Activate"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

        <Button
            android:id="@+id/deactivateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F44336"
            android:text="Deactivate"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/down_arrow"
            android:contentDescription="Min threshold direction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="min value"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editMinThreshold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/black"
            android:textColorHint="#888888"
            android:hint="value"
            android:inputType="numberDecimal"
            android:padding="8dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/celcius"
            android:contentDescription="Min threshold unit" />

        <Button
            android:id="@+id/buttonUpdateMinThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Update"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/up_arrow"
            android:contentDescription="Max threshold direction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="max value"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editMaxThreshold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/black"
            android:textColorHint="#888888"
            android:hint="value"
            android:inputType="numberDecimal"
            android:padding="8dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/celcius"
            android:contentDescription="Max threshold unit" />

        <Button
            android:id="@+id/buttonUpdateMaxThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Update"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/down_arrow"
            android:contentDescription="Min time direction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="min time"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editMinTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/black"
            android:textColorHint="#888888"
            android:hint="value"
            android:inputType="number"
            android:padding="8dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/time"
            android:contentDescription="Min time unit" />

        <Button
            android:id="@+id/buttonUpdateMinTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Update"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/up_arrow"
            android:contentDescription="Max time direction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="max time"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editMaxTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/black"
            android:textColorHint="#888888"
            android:hint="value"
            android:inputType="number"
            android:padding="8dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/time"
            android:contentDescription="Max time unit" />

        <Button
            android:id="@+id/buttonUpdateMaxTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Update"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_horizontal"
            android:contentDescription="Average time direction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="average time"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editMidTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/black"
            android:textColorHint="#888888"
            android:hint="value"
            android:inputType="number"
            android:padding="8dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/time"
            android:contentDescription="Average time unit" />

        <Button
            android:id="@+id/buttonUpdateMidTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Update"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:background="#FFF0F5"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mail"
            android:contentDescription="Mail notification" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="mail"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonMailActivate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="Activate"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/buttonMailDeactivate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Deactivate"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#F44336" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:background="#E0F7FA"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/telegram"
            android:contentDescription="Telegram notification" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="telegram"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonTelegramActivate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="Activate"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/buttonTelegramDeactivate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Deactivate"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#F44336" />

    </LinearLayout>

</LinearLayout>
